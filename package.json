{
  "name": "nest-mono-stack",
  "version": "0.0.1",
  "description": "A lightweight, modern monolithic stack combining NestJS with HTMX and Alpine.js for server-first reactivity",
  "author": "Abdou-Raouf ATARMLA <achilleatarmla@gmail.com>",
  "private": false,
  "license": "UNLICENSED",
  "scripts": {
    "build:css": "tailwindcss -i ./public/assets/css/tw-in.css -o ./public/assets/css/styles.min.css --minify",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "npm run build:css && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/axios": "^3.1.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mongoose": "^10.1.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nodesandbox/repo-framework": "^1.1.0",
    "@nodesandbox/response-kit": "^0.1.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "libxmljs": "^1.0.11",
    "mongoose": "^8.8.3",
    "nunjucks": "^3.2.4",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "tailwindcss-animate": "^1.0.7",
    "tw-colors": "^3.3.2",
    "xmllint": "^0.1.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nunjucks": "^3.2.6",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.15",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodesandbox/nest-mono-stack.git"
  },
  "bugs": {
    "url": "https://github.com/nodesandbox/nest-mono-stack/issues"
  },
  "homepage": "https://github.com/nodesandbox/nest-mono-stack#readme",
  "keywords": [
    "monolith",
    "nestjs",
    "htmx",
    "alpinejs",
    "tailwindcss",
    "postcss",
    "typescript",
    "ssr",
    "server-first"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
